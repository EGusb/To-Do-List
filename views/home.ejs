<%- include("header"); -%>

<div class="box" id="heading">
  <h1>My Lists</h1>
</div>

<div class="box">
  <% lists.forEach(function(list) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="listCheckBox"
        value="<%= list._id %>"
        onChange="this.form.submit()"
      />
      <p><a href="/<%= list.slug %>"><%= list.name %></a> - <%= list.items.length %> items</p>
    </div>
  </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newListName"
      placeholder="New List"
      required      
      autofocus
      autocomplete="off"
    />
    <button type="submit" name="button">+</button>
  </form>
</div>

<%- include("footer"); -%>
